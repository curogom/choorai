        <Callout client:load variant="info" title="Next Steps" locale="en">
          <ul class="list-disc list-inside space-y-1 mt-2">
            <li>
              <a href="https://firebase.google.com/docs/auth/web/phone-auth" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">
                Phone Authentication
