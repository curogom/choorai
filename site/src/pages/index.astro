---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button';
import ProgressBar from '../components/ProgressBar';

const features = [
  {
    icon: 'timer',
    title: '60분 완성',
    description: '복잡한 이론 공부 없이 실전 프로젝트로 바로 시작하세요. 한 시간 안에 결과물을 만듭니다.',
    color: 'blue',
  },
  {
    icon: 'build',
    title: '트러블슈팅 가이드',
    description: '에러가 나도 당황하지 마세요. 자주 발생하는 문제와 해결책을 단계별로 제공합니다.',
    color: 'green',
  },
  {
    icon: 'smart_toy',
    title: 'AI 프롬프트 제공',
    description: 'ChatGPT, Claude 등 AI에게 어떻게 질문해야 할지 막막한가요? 최적화된 질문을 드립니다.',
    color: 'purple',
  },
  {
    icon: 'savings',
    title: '비용 0원',
    description: '서버 비용 걱정 없이 무료 티어를 활용하여 서비스를 운영하는 방법을 알려드립니다.',
    color: 'yellow',
  },
];

const iconColors: Record<string, string> = {
  blue: 'bg-blue-500/10 text-blue-400 group-hover:bg-blue-500/20',
  green: 'bg-green-500/10 text-green-400 group-hover:bg-green-500/20',
  purple: 'bg-purple-500/10 text-purple-400 group-hover:bg-purple-500/20',
  yellow: 'bg-yellow-500/10 text-yellow-400 group-hover:bg-yellow-500/20',
};

const currentYear = new Date().getFullYear();
---

<BaseLayout title="코딩 몰라도 괜찮아요">
  <div class="relative min-h-screen flex flex-col">
    <!-- 배경 그리드 패턴 -->
    <div class="absolute inset-0 z-0 bg-grid-pattern opacity-[0.07] pointer-events-none h-[800px]"></div>

    <!-- 헤더 -->
    <header class="sticky top-0 z-50 border-b border-border bg-background/80 backdrop-blur-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-3">
            <img src="/favicon.png" alt="Choorai" class="w-8 h-8" />
            <span class="text-xl font-bold tracking-tight">Choorai</span>
          </div>
          <div class="flex items-center gap-4">
            <a href="/docs" class="hidden sm:flex text-sm font-medium text-text-secondary hover:text-white transition-colors">
              문서 보기
            </a>
            <a
              href="https://github.com/curogom/choorai"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-2 rounded-lg bg-surface border border-border px-4 py-2 text-sm font-bold text-white hover:bg-surface-elevated transition-colors"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
              </svg>
              GitHub
            </a>
          </div>
        </div>
      </div>
    </header>

    <main class="flex-grow z-10 flex flex-col">
      <!-- 히어로 섹션 -->
      <section class="relative pt-20 pb-16 sm:pt-24 sm:pb-20 lg:pb-28 overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
          <!-- 배경 블러 -->
          <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/10 rounded-full blur-[100px] pointer-events-none"></div>

          <!-- 배지 -->
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-bold mb-8">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
            </svg>
            <span>Level 1: 개발 입문자 환영</span>
          </div>

          <!-- 헤드라인 -->
          <h1 class="text-4xl sm:text-5xl lg:text-7xl font-black tracking-tight text-white mb-6 leading-tight max-w-4xl mx-auto">
            <span class="text-gradient">코딩 몰라도 괜찮아요</span>
          </h1>

          <p class="text-lg sm:text-xl text-text-secondary max-w-2xl mx-auto mb-10 leading-relaxed">
            AI와 함께 60분 만에 나만의 웹서비스를 배포하세요
          </p>

          <!-- CTA 버튼 -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 w-full max-w-md mx-auto">
            <Button
              client:load
              variant="primary"
              size="lg"
              glow={true}
              fullWidth={true}
              icon="play"
              href="/start/60min"
            >
              60분 완주 시작하기
            </Button>
            <Button
              client:load
              variant="secondary"
              size="lg"
              fullWidth={true}
              icon="book"
              href="/cycle/0-overview"
            >
              둘러보기
            </Button>
          </div>

          <!-- 진행률 카드 -->
          <div class="mt-16 max-w-lg mx-auto bg-surface border border-border rounded-xl p-5 shadow-2xl relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary/50 to-primary"></div>
            <ProgressBar
              client:load
              value={0}
              label="첫 배포 챌린지"
            />
          </div>
        </div>
      </section>

      <!-- 기능 섹션 -->
      <section class="py-16 sm:py-24 border-t border-border/50 bg-surface/30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 class="text-3xl font-bold tracking-tight text-white mb-4">누구나 쉽게 시작하는 개발</h2>
            <p class="text-text-secondary max-w-2xl mx-auto">
              개발자가 아니어도 괜찮습니다. Choorai가 제공하는 도구들로 아이디어를 실현해보세요.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {features.map((feature) => (
              <div class="group relative bg-surface border border-border rounded-xl p-6 hover:border-primary/50 transition-all duration-300 hover:-translate-y-1">
                <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent opacity-0 group-hover:opacity-100 rounded-xl transition-opacity"></div>
                <div class="relative z-10 flex flex-col items-start gap-4">
                  <div class={`p-3 rounded-lg transition-colors ${iconColors[feature.color]}`}>
                    {feature.icon === 'timer' && (
                      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    )}
                    {feature.icon === 'build' && (
                      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    )}
                    {feature.icon === 'smart_toy' && (
                      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                      </svg>
                    )}
                    {feature.icon === 'savings' && (
                      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    )}
                  </div>
                  <div>
                    <h3 class="text-lg font-bold text-white mb-2">{feature.title}</h3>
                    <p class="text-sm text-text-secondary leading-relaxed">{feature.description}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- CTA 섹션 -->
      <section class="py-16 sm:py-24 relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="bg-gradient-to-r from-surface-elevated to-surface rounded-2xl border border-border p-8 sm:p-12 lg:p-16 flex flex-col lg:flex-row items-center gap-12 relative">
            <div class="absolute top-0 right-0 w-64 h-64 bg-primary/10 rounded-full blur-[80px] pointer-events-none"></div>
            <div class="flex-1 space-y-6 relative z-10">
              <h2 class="text-3xl font-bold text-white">
                여러분의 아이디어는<br />
                <span class="text-primary">실현될 준비가 되었습니다</span>
              </h2>
              <p class="text-text-secondary text-lg">
                요리 레시피 사이트, 개인 포트폴리오, 혹은 간단한 사내 도구까지.
                Choorai와 함께라면 더 이상 개발자를 기다릴 필요가 없습니다.
              </p>
              <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <div class="flex items-center gap-2 text-sm text-text-secondary">
                  <svg class="w-5 h-5 text-success" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                  </svg>
                  <span>HTML/CSS 기초 필요 없음</span>
                </div>
                <div class="flex items-center gap-2 text-sm text-text-secondary">
                  <svg class="w-5 h-5 text-success" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                  </svg>
                  <span>설치 없이 웹에서 바로 시작</span>
                </div>
              </div>
            </div>
            <div class="flex-1 w-full relative z-10">
              <div class="relative rounded-lg overflow-hidden border border-border shadow-2xl bg-background aspect-video">
                <div class="absolute inset-0 flex items-center justify-center bg-black/40 hover:bg-black/20 transition-all cursor-pointer group">
                  <div class="w-16 h-16 rounded-full bg-primary/90 flex items-center justify-center shadow-glow group-hover:scale-110 transition-transform">
                    <svg class="w-8 h-8 text-background ml-1" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z" />
                    </svg>
                  </div>
                </div>
                <div class="w-full h-full bg-gradient-to-br from-primary/20 to-accent-purple/20"></div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- 푸터 -->
    <footer class="border-t border-border bg-background py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
          <div class="flex items-center gap-2">
            <img src="/favicon.png" alt="" class="w-6 h-6" aria-hidden="true" />
            <span class="text-white font-bold text-lg">Choorai</span>
          </div>
          <div class="flex items-center gap-8">
            <a href="https://www.keyflow.me/ko/@curogom" target="_blank" rel="noopener noreferrer" class="text-text-secondary hover:text-white transition-colors text-sm font-medium">블로그</a>
            <a href="https://github.com/curogom/choorai" target="_blank" rel="noopener noreferrer" class="text-text-secondary hover:text-white transition-colors text-sm font-medium flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
              </svg>
              GitHub
            </a>
            <a href="/terms" class="text-text-secondary hover:text-white transition-colors text-sm font-medium">이용약관</a>
            <a href="/privacy" class="text-text-secondary hover:text-white transition-colors text-sm font-medium">개인정보처리방침</a>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-border text-center md:text-left">
          <p class="text-xs text-text-secondary leading-5">
            © {currentYear} Choorai. 모든 권리 보유.
            <span class="block md:inline mt-1 md:mt-0 md:ml-2">비개발자를 위해 만들었습니다.</span>
          </p>
        </div>
      </div>
    </footer>
  </div>
</BaseLayout>
